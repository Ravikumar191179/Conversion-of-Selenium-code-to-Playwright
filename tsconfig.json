{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": [
            "ES2020"
        ],
        "outDir": "./dist",
        "rootDir": "./",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "types": [
            "node",
            "@playwright/test"
        ]
    },
    "include": [
        "src/**/*",
        "tests/**/*",
        "reports/**/*",
        "playwright.config.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "test-results",
        "playwright-report"
    ]
}